@page
@model LogoutModel
@{
	ViewData["Title"] = "Sair";
}

<style>
	body {
		background: linear-gradient(to bottom, #F5E7C6, #CC795D);
		min-height: 100vh;
		font-family: 'Segoe UI', sans-serif;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 20px;
	}

	.logout-card {
		background: #ffffffd9;
		padding: 35px;
		max-width: 420px;
		width: 100%;
		border-radius: 25px;
		text-align: center;
		box-shadow: 0px 8px 25px rgba(0,0,0,0.20);
		backdrop-filter: blur(8px);
	}

	.logout-title {
		font-size: 26px;
		font-weight: bold;
		color: #8B5A2B;
		margin-bottom: 15px;
	}

	.logout-text {
		color: #5a4230;
		font-size: 17px;
		margin-bottom: 25px;
	}

	.btn-nano {
		background: #8B5A2B;
		color: white;
		padding: 12px 25px;
		font-size: 18px;
		border-radius: 12px;
		border: none;
		transition: 0.3s;
	}

		.btn-nano:hover {
			background: #a36932;
			transform: scale(1.03);
			color: white;
		}
</style>

<div class="logout-card">
	<h1 class="logout-title">@ViewData["Title"]</h1>

	@if (User.Identity?.IsAuthenticated ?? false)
	{
		<p class="logout-text">Tem certeza que deseja sair da sua conta?</p>

		<form asp-area="Identity"
			  asp-page="/Account/Logout"
			  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
			  method="post">
			<button type="submit" class="btn-nano">Sair agora</button>
		</form>
	}
	else
	{
		<p class="logout-text">
			Você saiu da sua conta com sucesso.<br />
			Volte sempre ao NanoCuidado!
		</p>
	}
</div>
